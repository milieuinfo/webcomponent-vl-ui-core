{
  "name": "vl-ui-core",
  "version": "1.3.1",
  "description": "De core is noodzakelijk om gebruik te maken van de webcomponenten.",
  "main": "vl-core.js",
  "author": "DIDM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-core.git"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-core#readme",
  "scripts": {
    "prepare": "npm run prepare:sass && npm run prepare:fonts",
    "prepare:sass": "sass style.scss core-style.css --load-path node_modules/@govflanders",
    "prepare:fonts": "npm run prepare:font:path && npm run prepare:font:flanders-sans-light && npm run prepare:font:flanders-sans-regular && npm run prepare:font:flanders-sans-medium && npm run prepare:font:flanders-sans-bold && npm run prepare:font:flanders-serif-light && npm run prepare:font:flanders-serif-regular && npm run prepare:font:flanders-serif-medium && npm run prepare:font:flanders-serif-bold && npm run prepare:font:vlaanderen-icon",
    "prepare:font:path": "replace 'https://d1l6j3bn1os9t0.cloudfront.net/3.latest/fonts/flanders/' 'https://cdn.milieuinfo.be/vlaanderen-font/LATEST/font/flandersart/' core-style.css",
    "prepare:font:flanders-sans-light": "replace 'flanders-sans-light.woff' 'FlandersArtSans-Regular.woff' core-style.css",
    "prepare:font:flanders-sans-regular": "replace 'flanders-sans-regular.woff' 'FlandersArtSans-Regular.woff' core-style.css",
    "prepare:font:flanders-sans-medium": "replace 'flanders-sans-medium.woff' 'FlandersArtSans-Medium.woff' core-style.css",
    "prepare:font:flanders-sans-bold": "replace 'flanders-sans-bold.woff' 'FlandersArtSans-Bold.woff' core-style.css",
    "prepare:font:flanders-serif-light": "replace 'flanders-serif-light.woff' 'FlandersArtSerif-Light.woff' core-style.css",
    "prepare:font:flanders-serif-regular": "replace 'flanders-serif-regular.woff' 'FlandersArtSerif-Regular.woff' core-style.css",
    "prepare:font:flanders-serif-medium": "replace 'flanders-serif-medium.woff' 'FlandersArtSerif-Medium.woff' core-style.css",
    "prepare:font:flanders-serif-bold": "replace 'flanders-serif-bold.woff' 'FlandersArtSerif-Bold.woff' core-style.css",
    "prepare:font:vlaanderen-icon": "replace '/font/vlaanderen-icon.woff' 'https://cdn.milieuinfo.be/vlaanderen-font/LATEST/font/flandersart/vlaanderen-icon.woff' core-style.css",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-core.js -- *.src.js",
    "release:prepare:css": "replace '../core-style.css' '/node_modules/vl-ui-core/core-style.css' vl-core.js",
    "release:prepare:commit": "git add -f vl-core.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo"
  },
  "dependencies": {
    "@govflanders/vl-ui-core": "3.7.2"
  },
  "devDependencies": {
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2",
    "replace": "1.0.0",
    "np": "3.0.4",
    "uglify-js-es6": "2.8.9"
  }
}
