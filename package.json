{
  "name": "vl-ui-core",
  "version": "3.1.1",
  "description": "De core is noodzakelijk om gebruik te maken van de webcomponenten.",
  "main": "index.js",
  "author": "DIDM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-core.git"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-core#readme",
  "scripts": {
    "prepare": "npm run prepare:sass && npm run prepare:fonts && npm update --dev vl-ui-util",
    "prepare:sass": "sass style.scss core-style.css --load-path node_modules/@govflanders",
    "prepare:fonts": "npm run prepare:font:path-sans && npm run prepare:font:path-serif && npm run prepare:font:path-italic && npm run prepare:font:vlaanderen-icon",
    "prepare:font:path-sans": "replace 'https://ui.vlaanderen.be/assets/fonts/sans/FlandersArtSans' 'https://cdn.milieuinfo.be/vlaanderen-font/LATEST/font/flandersart/FlandersArtSans' core-style.css",
    "prepare:font:path-serif": "replace 'https://ui.vlaanderen.be/assets/fonts/serif/FlandersArtSerif' 'https://cdn.milieuinfo.be/vlaanderen-font/LATEST/font/flandersart/FlandersArtSerif' core-style.css",
    "prepare:font:path-italic": "replace 'https://ui.vlaanderen.be/assets/fonts/italic/FlandersArtSans' 'https://cdn.milieuinfo.be/vlaanderen-font/LATEST/font/flandersart/FlandersArtSansItalic' core-style.css",
    "prepare:font:vlaanderen-icon": "replace '/font/iconfont/vlaanderen-icon.woff' 'https://cdn.milieuinfo.be/vlaanderen-font/LATEST/font/iconfont/3.9.1/vlaanderen-icon.woff' core-style.css",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-core.js -- *.src.js",
    "release:prepare:css": "replace '../core-style.css' '/node_modules/vl-ui-core/core-style.css' vl-core.js",
    "release:prepare:commit": "git add -f vl-core.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo"
  },
  "dependencies": {
    "@govflanders/vl-ui-core": "3.9.1",
    "document-register-element": "1.14.3",
    "vl-ui-util": "^3.4.2"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chromedriver": "79.0.0",
    "geckodriver": "1.19.1",
    "http-server": "0.12.0",
    "mocha": "6.2.2",
    "np": "4.0.2",
    "replace": "1.1.1",
    "selenium-webdriver": "4.0.0-alpha.5",
    "uglify-es": "github:mishoo/UglifyJS2#harmony",
    "wct-browser-legacy": "1.0.2",
    "yargs": "15.0.2"
  }
}
